{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "framework": "vite",
    "functions": {
        "api/index.cjs": {
            "maxDuration": 30,
            "includeFiles": "server/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.cjs"
        },
        {
            "source": "/health",
            "destination": "/api/index.cjs"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}